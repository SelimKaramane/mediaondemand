NEXT_PUBLIC_SUPABASE_URL=https://xxxx.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_anon_key

NEXT_PUBLIC_ALGOLIA_APP_ID=your_app_id
NEXT_PUBLIC_ALGOLIA_SEARCH_KEY=your_search_only_key
ALGOLIA_ADMIN_KEY=your_admin_key

# Optional (Gutenberg seed)
GUTENDEX_LANGS=es,en,fr
GUTENDEX_LIMIT=20
ALGOLIA_INDEX_NAME=mediaondemand_content

# Managed ebook conversion (CloudConvert)
CLOUDCONVERT_API_KEY=your_cloudconvert_key

# YouTube dataset (optional)
YOUTUBE_PLAYLIST_ID=your_playlist_id
# Or multiple playlists (comma-separated IDs):
YOUTUBE_PLAYLIST_IDS=playlist_id_1,playlist_id_2
# Or detailed playlists with genre/language: id|genre|language
YOUTUBE_PLAYLISTS=playlist_id_1|Technologie|English,playlist_id_2|Culture|English
YOUTUBE_MAX_VIDEOS=50
YOUTUBE_LANGUAGE=Français
YOUTUBE_GENRE=Culture

# Pexels videos (optional)
PEXELS_API_KEY=your_pexels_key
# Simple list (same genre/language)
PEXELS_QUERY=technology,science,business,education,design,culture
# Or detailed queries: query|genre|language
PEXELS_QUERIES=technology|Technologie|English,artificial intelligence|Technologie|English,science lab|Sciences|English,business|Business|English,education|Éducation|English,design|Design|English,culture|Culture|English,technologie|Technologie|Français,intelligence artificielle|Technologie|Français,science|Sciences|Français,éducation|Éducation|Français,culture|Culture|Français
PEXELS_MAX_VIDEOS=60
PEXELS_PER_PAGE=80
# Limit per query to ensure category variety
PEXELS_PER_QUERY=10
# >=60 = ensure videos > 1 minute
PEXELS_MIN_DURATION=60
PEXELS_MAX_DURATION=240
PEXELS_LANGUAGE=English
PEXELS_GENRE=Technologie

# Managed video transcoding (Mux)
MUX_TOKEN_ID=your_mux_token_id
MUX_TOKEN_SECRET=your_mux_token_secret

# Optional: store converted PDFs in Supabase Storage
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key
SUPABASE_STORAGE_BUCKET=ebooks
SUPABASE_SIGNED_URL_EXPIRES=3600

# Optional: store source videos in Supabase Storage
SUPABASE_VIDEO_BUCKET=videos
SUPABASE_VIDEO_PUBLIC=false
VIDEO_ASSETS_DIR=scripts/video-assets
VIDEO_MAP_FILE=scripts/video-map.json
VIDEO_SOURCES_FILE=scripts/video-sources.json
